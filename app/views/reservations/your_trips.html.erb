<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Pads", pads_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Pet's Itinerary", your_trips_path, class: "sidebar-link active" %></li>

    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Pet's Itinerary
      </div>
      <div class="panel-body">

        <% @trips.each do |trip| %>
        <div class="row">
          <div class="col-md-2">
            <%= trip.start_date.strftime('%v') %>
          </div>
          <div class="col-md-6">
            <%= link_to pad_path(trip.pad) do %>
            <%= image_tag trip.pad.photos[0].image.url(:thumb) %>
            <% end %>
          </div>
          <div class="col-md-2">
            <%= link_to user_path(trip.pad.user) do %>
            <%= image_tag avatar_url(trip.pad.user), class: "img-circle avatar-medium" %>
            <% end %>
          </div>
          <div class="col-md-2 right">
            <h4>$<%= trip.total %></h4>
          </div>
        </div>
        <hr>
      <% end %>
      </div>
    </div>
  </div>
</div>
