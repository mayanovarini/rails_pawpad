<div class="panel panel-default">
  <div class="panel-body">
    <!-- image -->
    <div class="row">
      <div class="col-md-12">
        <%= image_tag @photos[0].image.url(), class: "img-responsive" if @photos.length > 0 %>
      </div>
    </div>

    <br>

    <!-- main info -->
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-3 text-center">
            <%= image_tag avatar_url(@pad.user), class: "img-circle avatar-large" %><br><br>
            <%= @pad.user.fullname %>
          </div>

          <div class="col-md-9">
            <h4><%= @pad.pad_name %></h4>
            <%= @pad.address %>

            <div class="row text-center row-space-1">
              <div class="col-sm-3">
                <i class="fa fa-home fa-2x"></i>
              </div>
              <div class="col-sm-3">
                <i class="fa fa-home fa-2x"></i>
              </div>
              <div class="col-sm-3">
                <i class="fa fa-home fa-2x"></i>
              </div>
              <div class="col-sm-3">
                <i class="fa fa-home fa-2x"></i>
              </div>

              <div class="row text-center">
                <div class="col-sm-3">
                  <%= @pad.property_type %>
                </div>
                <div class="col-sm-3">
                  <%= @pad.pad_type %>
                </div>
                <div class="col-sm-3">
                  <%= @pad.total_pad %> <%= @pad.total_pad > 1? "Total Pad" : "Total Pad" %>
                </div>
                <div class="col-sm-3">
                  <%= @pad.accommodate %> <%= @pad.accommodate > 1? "Pet" : "Pet" %>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <!-- Reservation form -->
        <%= render 'reservations/form' %>
      </div>
    </div>

    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h2>About This Pad</h2>
        <p><%= @pad.summary %></p>
      </div>
    </div>

    <!-- Facilities -->
    <div class="row">
      <div class="col-md-10">
        <div class="col-md-2">
          <p>Facilities</p>
        </div>
        <div class="col-md-10">
          <div class="row">
            <div class="col-md-6">
              <ul class="facilities">
                <li class="<%= 'text-line-through' if !@pad.is_food %>">Food</li>
                <li class="<%= 'text-line-through' if !@pad.is_water %>">Water</li>
                <li class="<%= 'text-line-through' if !@pad.is_treat %>">Treat</li>
              </ul>
            </div>
            <div class="col-md-6">
              <li class="<%= 'text-line-through' if !@pad.is_ac %>">Air Conditioning</li>
              <li class="<%= 'text-line-through' if !@pad.is_heater %>">Heater</li>
              <li class="<%= 'text-line-through' if !@pad.is_toy %>">Toy</li>
              <li class="<%= 'text-line-through' if !@pad.is_walk %>">Walk</li>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Carousel -->
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

          <% if @photos %>
          <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
                <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>
          <% end %>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <% if @photos %>
              <% @photos.each do |photo| %>
                <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                  <%= image_tag photo.image.url() %>
                </div>
              <% end %>
            <% end %>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

      </div>
    </div>

    <br>
    <hr>
    <!-- Google map -->
    <div class="row">
      <div class="col-md-12">

        <div id="map"></div>
        <style>
          #map {
            width: 100%;
            height: 400px;
          }
        </style>
          <script>
            function initMap() {
              var mapDiv = document.getElementById('map');
              var map = new google.maps.Map(mapDiv, {
                  center: {lat: <%= @pad.latitude %>, lng: <%= @pad.longitude %>},
                  zoom: 14
              });
              var marker = new google.maps.Marker({
    		        	position: {lat: <%= @pad.latitude %>, lng: <%= @pad.longitude %>},
    		        	title: "Paw Pad is here!"
    		        });

    		        marker.setMap(map);
            }

        </script>
        <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5RTKb_SkM24pvC6qQ-sEfvr6_kFrRV3g&callback=initMap">
        </script>
      </div>
    </div>

    <!-- Nearby Pads -->
    <h3>Nearby Pads</h3>
    <div class="row">
      <% for pad in @pad.nearbys(10) %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag pad.photos[0].image.url(:medium) %>
            </div>
            <div class="panel-body">
              <%= link_to pad.pad_name, pad %><br>
              (<%= pad.distance.round(2) %> miles away)
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
